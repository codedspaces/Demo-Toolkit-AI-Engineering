# AI Engineering Toolkit - Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# AI/LLM API Keys
# ==============================================

# OpenAI API Key (required for content generation and RAG)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional, for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google/Gemini API Key (optional)
GOOGLE_API_KEY=your_google_api_key_here

# Hugging Face API Token (optional, for model downloads)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# ==============================================
# Newsletter Platform APIs
# ==============================================

# Substack API (if using Substack)
SUBSTACK_API_KEY=your_substack_api_key
SUBSTACK_PUBLICATION_ID=your_publication_id

# ConvertKit API (if using ConvertKit)
CONVERTKIT_API_KEY=your_convertkit_api_key
CONVERTKIT_API_SECRET=your_convertkit_secret

# Mailchimp API (if using Mailchimp)
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_SERVER_PREFIX=us1

# Ghost API (if using Ghost)
GHOST_API_URL=https://your-site.ghost.io
GHOST_ADMIN_API_KEY=your_ghost_admin_key
GHOST_CONTENT_API_KEY=your_ghost_content_key

# ==============================================
# Social Media APIs
# ==============================================

# Twitter/X API v2
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Reddit API (for content scraping)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=AI-Toolkit-Bot/1.0

# ==============================================
# Vector Databases
# ==============================================

# Pinecone
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment

# Weaviate
WEAVIATE_URL=your_weaviate_cluster_url
WEAVIATE_API_KEY=your_weaviate_api_key

# Qdrant
QDRANT_URL=your_qdrant_url
QDRANT_API_KEY=your_qdrant_api_key

# ==============================================
# MLOps & Monitoring
# ==============================================

# Weights & Biases
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=ai-engineering-toolkit

# MLflow
MLFLOW_TRACKING_URI=your_mlflow_server_uri
MLFLOW_TRACKING_USERNAME=your_username
MLFLOW_TRACKING_PASSWORD=your_password

# ==============================================
# Cloud Services
# ==============================================

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/gcp-credentials.json

# Azure
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# ==============================================
# Analytics & Tracking
# ==============================================

# Google Analytics
GOOGLE_ANALYTICS_TRACKING_ID=GA-XXXXXXXXX-X

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_project_token

# Hotjar
HOTJAR_SITE_ID=your_hotjar_site_id

# ==============================================
# Newsletter Configuration
# ==============================================

# Default newsletter settings
NEWSLETTER_NAME=AI Engineering Weekly
NEWSLETTER_FROM_EMAIL=newsletter@yourdomain.com
NEWSLETTER_FROM_NAME=Your Name
NEWSLETTER_REPLY_TO=reply@yourdomain.com

# Newsletter scheduling
DEFAULT_SEND_TIME=09:00
DEFAULT_TIMEZONE=UTC
NEWSLETTER_FREQUENCY=weekly

# Content settings
MAX_NEWS_ITEMS=20
CONTENT_CACHE_HOURS=6
ENABLE_AI_GENERATION=true

# ==============================================
# Security & Rate Limiting
# ==============================================

# Rate limiting
API_RATE_LIMIT_PER_MINUTE=60
OPENAI_RATE_LIMIT_RPM=3500

# Security
SECRET_KEY=your_secret_key_for_sessions
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ==============================================
# Development Settings
# ==============================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database (if using one)
DATABASE_URL=sqlite:///ai_toolkit.db

# Cache
REDIS_URL=redis://localhost:6379/0

# ==============================================
# Newsletter Template Settings
# ==============================================

# Default template
DEFAULT_TEMPLATE=modern
NEWSLETTER_LOGO_URL=https://yourdomain.com/logo.png
NEWSLETTER_WEBSITE_URL=https://yourdomain.com
NEWSLETTER_SOCIAL_TWITTER=@yourusername
NEWSLETTER_SOCIAL_LINKEDIN=https://linkedin.com/in/yourusername

# Color scheme
PRIMARY_COLOR=#667eea
SECONDARY_COLOR=#764ba2
ACCENT_COLOR=#f093fb